<div class='bookinfo'>
    
 <h1>Book Info</h1>
    <div class = 'bookname'>
       
    </div>
    <script type="text/javascript" src="https://www.google.com/books/jsapi.js"></script>
    <script type="text/javascript">
      google.books.load();

      function initialize() {
        var viewer = new google.books.DefaultViewer(document.getElementById('viewerCanvas'));
        
        viewer.load('{{bookId}}');
      //  books.volume.get('{{bookId}}')
      }

      google.books.setOnLoadCallback(initialize);
    </script>
     
    <div id="viewerCanvas" style="width: 600px; height: 500px"></div>
    <div class='bookreview'>
                {{#if hasReviews}}
                <p class="review" id="myReview">
                    {{#each reviews}}
                    {{!-- <li> --}}
                    {{this.user}}
                    {{this.review}}
                    {{!-- </li> --}}
                    {{/each}}
                </p>
                {{/if}}
            </div>
   <div class = 'comment'>
        <div class = 'comment_dashboard'>
            <form id="BookInfoForm" method="POST" action="/bookinfo/pKtgDwAAQBAJ">
                <textarea class='input' name="review" id="review" placeholder='Add Review'></textarea><br>
                <input type="number" name="rating" id="rating" placeholder="Rating out of 5">
                <input type="hidden" value={{bookId}} name="bookId">
                 <button class = 'submit' type = 'submit'>Add</button>
            </form>
        </div>
    </div> 

</div>

